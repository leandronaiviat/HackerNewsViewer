<Window x:Class="HackerNewsWPFMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:HackerNewsWPFMVVM.ModelViews"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <viewmodel:BaseViewModel x:Key="viewModel"/>
    </Window.Resources>

    <Grid DataContext="{Binding Source={StaticResource viewModel}}">
        <ListView Margin="400 0 0 0" ItemsSource="{Binding}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding Title}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="actionBtn" Width="70" Height="70" Margin="0 0 600 0" Content="Load" Command="{Binding GetStoriesCommand}"
                />
    </Grid>
</Window>
